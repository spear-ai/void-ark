{
  "name": "voidark-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Panamax and Rust Base packages",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "yarn workspace @void-ark/rust-base run lint",
    "clippy": "yarn workspace @void-ark/rust-base run lint",
    "fmt": "yarn workspace @void-ark/rust-base run format",
    "fmt:check": "yarn workspace @void-ark/rust-base run format:check",
    "build": "yarn workspace @void-ark/rust-base run build",
    "test": "yarn workspace @void-ark/rust-base run test",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@types/node": "20.0.0",
    "@yarnpkg/sdks": "3.2.2",
    "prettier": "3.1.0",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@4.8.1"
}
